<% if notice %>
  <div class="flex items-center p-4 mb-4 text-sm text-blue-800 border border-blue-300 rounded-lg bg-blue-50 dark:text-blue-400 dark:border-blue-800">
    <p class="notice font-medium"><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div class="flex items-center p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50 dark:text-red-400 dark:border-red-800">
    <p class="alert font-medium"><%= alert %></p>
  </div>
<% end %>
